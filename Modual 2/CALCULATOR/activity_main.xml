<?xml version="1.0" encoding="utf-8"?>



<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="20dp"
    android:layout_margin="10dp"
    tools:context=".MainActivity"
    android:layout_gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp"
        tools:context=".MainActivity"
        android:layout_gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity"
        android:padding="10dp"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="@string/enter_the_first_number_here"
            android:textColor="@color/black"
            android:textColorHint="#78909C"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/num1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="num1"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            tools:ignore="LabelFor,SpeakableTextPresentCheck" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_the_secound_number_here"
            android:textColor="@color/black"
            android:textColorHint="#78909C"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/num2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="num2"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            tools:ignore="LabelFor,SpeakableTextPresentCheck" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#FFC107"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="22sp"
                tools:ignore="ButtonStyle,HardcodedText,TextContrastCheck" />

            <Button
                android:id="@+id/sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#FFC107"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="22sp"
                tools:ignore="ButtonStyle,HardcodedText,TextContrastCheck" />

            <Button
                android:id="@+id/mul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#FFC107"
                android:text="*"
                android:textColor="@color/white"
                android:textSize="22sp"
                tools:ignore="ButtonStyle,HardcodedText" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/div"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#FFC107"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="22sp"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:id="@+id/per"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#FFC107"
                android:text="%"
                android:textColor="@color/white"
                android:textSize="22sp"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:id="@+id/res"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#FFC107"
                android:text="RESET"
                android:textColor="#006064"
                tools:ignore="ButtonStyle,HardcodedText" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ANSWER IS"
            android:gravity="center"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/ans"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="35sp"
            android:gravity="center"/>

    </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>